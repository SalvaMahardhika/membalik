<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Layout untuk skor tim -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="32dp">

        <!-- Team A -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textSize="24sp"
                android:textColor="#666666"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/score_team_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="40sp"
                android:textColor="#333333"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_plus1_team_a"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="+1"
                android:backgroundTint="@color/purple_700"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btn_plus2_team_a"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="+2"
                android:backgroundTint="@color/purple_700"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Garis Pemisah -->
        <View
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:background="@android:color/darker_gray"
            android:layout_marginHorizontal="16dp" />

        <!-- Team B -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textSize="24sp"
                android:textColor="#666666"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/score_team_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="40sp"
                android:textColor="#333333"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_plus1_team_b"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="+1"
                android:backgroundTint="@color/purple_700"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btn_plus2_team_b"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="+2"
                android:backgroundTint="@color/purple_700"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Teks hasil pertandingan -->
    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:visibility="gone"/>

    <!-- Tombol Reset -->
    <Button
        android:id="@+id/btn_reset"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="RESET"
        android:backgroundTint="@color/purple_700"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp" />

</LinearLayout>
